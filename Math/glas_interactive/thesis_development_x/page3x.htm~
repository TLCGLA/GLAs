<script>
$(document).ready(function(){
		var i = 0;
		var x = 3;
$(".button").css ('visibility', 'hidden');
	$(".right") .click (function(){
	i++;
	$("#counter") .html (i);
	$(this).unbind ('click') .css ("cursor" , "none") 
	$(this).siblings ("span") .unbind ('click') .attr ("class" , "turnedOff") 
	$(this).css ({"color": "#0D408D", "font-weight": "bold"})
	if (i == x) {$('.button').css ('visibility', 'visible')};
	});
	
	$(".wrong") .click (function(){
	i--;
	$("#counter") .html (i);
	$(this).unbind ('click') .css ("cursor" , "none") 
	$(this).siblings ("span") .unbind ('click')  .attr ("class" , "turnedOff")
	$(this).css ({"color": "red", "font-weight": "bold"})

	});

});


</script>

	

