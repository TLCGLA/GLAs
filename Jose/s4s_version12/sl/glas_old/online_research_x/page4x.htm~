<script>
$(document).ready(function(){
	var i = 0;
	var x = 3;
	
	$(".button").css ('visibility', 'hidden');
	
	$(".right") .click (function(){
	$("#counter") .html (i);
	$(this).unbind ('click') .css ("cursor" , "none")
	$(this).siblings("#feedback").html (" Correct! ").css ({"color": "#0D408D", "font-weight": "bold"})
  		i++;
		$("#counter") .html (i);
		if (i == x) {$('.button').css ('visibility', 'visible')};
	});
	
	$(".wrong") .click (function(){
	i--;
	$("#counter") .html (i);
	$(this).unbind ('click') .css ("cursor" , "none")
	$(this).siblings("#feedback").html (" Ooops! ").css ({"color": "red", "font-weight": "bold"})

	});

});


</script>

	

